<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
        "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">
    <!-- Общие свойства -->
    <property name="severity" value="error"/>
    <property name="charset" value="UTF-8"/>

    <!-- Подключение suppressions ( по пути config/checkstyle/suppressions.xml) -->
    <module name="SuppressionFilter">
        <property name="file" value="config/checkstyle/suppressions.xml"/>
    </module>

    <!-- Проверка символов табуляции в файлах -->
    <module name="FileTabCharacter">
        <property name="eachLine" value="true"/>
    </module>

    <!-- Ограничение длины строки -->
    <module name="LineLength">
        <property name="max" value="120"/>
        <!-- игнорировать длинные строки импорта, комментарии с URL и строки с long literals -->
        <property name="ignorePattern" value="^package\b|^import\b|.*http[s]?://.*|.*\\..*L$"/>
    </module>

    <!-- Требовать package-info.java с Javadoc для пакета -->
    <module name="JavadocPackage"/>

    <!-- Основные проверки синтаксиса/стиля на уровне AST -->
    <module name="TreeWalker">

        <!-- Запрет публичного/дефолтного конструктора у utility классов -->
        <module name="HideUtilityClassConstructor"/>

        <!-- Контроль порядка импортов: java.*, javax.*, org.*, com.* -->
        <module name="ImportOrder">
            <property name="ordered" value="true"/>
            <property name="separated" value="true"/>
            <property name="groups" value="java,javax,org,com"/>
            <property name="staticGroups" value="top"/>
        </module>

        <!-- Запрет звездочных импортов -->
        <module name="AvoidStarImport"/>

        <!-- Контроль magic numbers (исключаем -1,0,1) -->
        <module name="MagicNumber">
            <property name="ignoreNumbers" value="-1,0,1"/>
            <property name="ignoreHashCodeMethod" value="true"/>
        </module>

        <!-- Javadoc для публичных классов и методов (настраиваем мягче для проектов с аннотациями) -->
        <module name="JavadocType">
            <property name="scope" value="public"/>
        </module>

        <module name="JavadocMethod">
            <property name="accessModifiers" value="public"/>
            <property name="allowMissingParamTags" value="true"/>
            <property name="validateThrows" value="true"/>
        </module>

        <!-- Прочие полезные проверки -->
        <module name="BooleanExpressionComplexity">
            <property name="max" value="5"/>
        </module>

        <module name="CyclomaticComplexity">
            <property name="max" value="20"/>
        </module>

        <module name="TodoComment">
            <property name="format" value="(TODO|FIXME|XXX)"/>
        </module>

        <!-- Проверки имен файлов и классов -->
        <module name="OuterTypeFilename"/>

        <!-- Контроль пустых строк -->
        <module name="EmptyLineSeparator"/>

    </module> <!-- TreeWalker -->

    <!-- Проверка кодировки и BOM -->
    <module name="NewlineAtEndOfFile"/>

</module> <!-- Checker -->
